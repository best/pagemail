services:
  pagemail:
    image: ${PAGEMAIL_IMAGE:-pagemail:latest}
    container_name: pagemail
    restart: unless-stopped
    ports:
      - "8080:8080"
    env_file:
      - .env
    environment:
      - PUID=${PUID:-1000}
      - PGID=${PGID:-1000}
      - DB_DRIVER=postgres
      - DB_URL=postgres://pagemail:${DB_PASSWORD:-pagemail}@postgres:5432/pagemail?sslmode=disable
    volumes:
      - pagemail_storage:/app/storage
    depends_on:
      postgres:
        condition: service_healthy
    healthcheck:
      test: ["CMD", "wget", "--no-verbose", "--tries=1", "--spider", "http://127.0.0.1:8080/v1/health"]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 10s
    networks:
      - pagemail_network

  postgres:
    image: postgres:16-alpine
    container_name: pagemail_postgres
    restart: unless-stopped
    environment:
      POSTGRES_USER: pagemail
      POSTGRES_PASSWORD: ${DB_PASSWORD:-pagemail}
      POSTGRES_DB: pagemail
    volumes:
      - postgres_data:/var/lib/postgresql/data
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U pagemail -d pagemail"]
      interval: 10s
      timeout: 5s
      retries: 5
      start_period: 10s
    networks:
      - pagemail_network

volumes:
  pagemail_storage:
    driver: local
  postgres_data:
    driver: local

networks:
  pagemail_network:
    driver: bridge
